<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.PaymentFailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">
        <ImageView android:layout_width="200dp"
                   android:layout_height="200dp"
                   android:id="@+id/payment_fail_image"
                   android:src="@drawable/ic_payment_fail" app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginTop="32dp"/>
        <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               android:text="Opps! Something went wrong"
                                                               android:fontFamily="sans-serif-black"
                                                               android:textSize="20sp"
                                                               app:layout_constraintEnd_toEndOf="parent"
                                                               app:layout_constraintStart_toStartOf="parent"
                                                               app:layout_constraintTop_toBottomOf="@+id/payment_fail_image"
                                                               android:layout_marginTop="16dp"
                                                               android:id="@+id/materialTextView"/>
        <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               android:text="We are unable Complete Transaction"
                                                               android:fontFamily="sans-serif-black"
                                                               android:textSize="20sp"
                                                               app:layout_constraintEnd_toEndOf="parent"
                                                               app:layout_constraintStart_toStartOf="parent"
                                                               app:layout_constraintTop_toBottomOf="@+id/materialTextView"
                                                               android:layout_marginTop="16dp"
                                                               android:id="@+id/materialTextView2"/>
        <com.google.android.material.button.MaterialButton
                android:id="@+id/retry_payment"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Try Again"
                android:textColor="@color/colorWhite"
                android:textSize="25sp"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialTextView2" android:layout_marginTop="32dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>