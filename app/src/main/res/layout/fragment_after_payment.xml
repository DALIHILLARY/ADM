<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.fragment.AfterPaymentFragment">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">
        <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_payment_success"
                android:id="@+id/payment_success"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"/>
        <com.google.android.material.textview.MaterialTextView android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content"
                                                               android:text="Payment Successful"
                                                               android:fontFamily="sans-serif-black"
                                                               android:textSize="20sp"
                                                               app:layout_constraintEnd_toEndOf="parent"
                                                               app:layout_constraintStart_toStartOf="parent"
                                                               app:layout_constraintTop_toBottomOf="@+id/payment_success"
                                                               android:layout_marginTop="16dp"
                                                               android:id="@+id/materialTextView"/>
        <com.google.android.material.button.MaterialButton android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:id="@+id/payment_success_button"
                                                           android:background="@color/colorPrimary"
                                                           app:cornerRadius="10dp"
                                                           android:text="Proceed"
                                                           android:textColor="@color/colorWhite"
                                                           android:layout_marginHorizontal="20dp"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           app:layout_constraintTop_toBottomOf="@+id/materialTextView"
                                                           android:layout_marginTop="16dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>